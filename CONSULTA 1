/**********************************************************************************/
/*        ¿Cuáles son los empleados con mayor experiencia por sucursal?           */
/**********************************************************************************/
/*SUCURSAL 1*/
SELECT 
	VENDEDOR.FECHA_INGRESO_LABORAR AS FECHA_INGRESO, 
	VENDEDOR.NOMBRE_VENDEDOR AS NOMBRE,
	VENDEDOR.APELLIDOS__VENDEDOR AS APELLIDOS
FROM SUCURSAL INNER JOIN VENDEDOR ON SUCURSAL.ID_SUCURSAL = VENDEDOR.ID_SUCURSAL
WHERE SUCURSAL.ID_SUCURSAL = 1
	GROUP BY 
	  FECHA_INGRESO,
	  NOMBRE, 
	  APELLIDOS,
LIMIT 1;

/*SUCURSAL 2*/
SELECT 
	VENDEDOR.FECHA_INGRESO_LABORAR AS FECHA_INGRESO, 
	VENDEDOR.NOMBRE_VENDEDOR AS NOMBRE,
	VENDEDOR.APELLIDOS__VENDEDOR AS APELLIDOS
FROM SUCURSAL INNER JOIN VENDEDOR ON SUCURSAL.ID_SUCURSAL = VENDEDOR.ID_SUCURSAL
WHERE SUCURSAL.ID_SUCURSAL = 2
	GROUP BY 
	  FECHA_INGRESO,
	  NOMBRE, 
	  APELLIDOS
LIMIT 1;

/*SUCURSAL 3*/
SELECT 
	VENDEDOR.FECHA_INGRESO_LABORAR AS FECHA_INGRESO, 
	VENDEDOR.NOMBRE_VENDEDOR AS NOMBRE,
	VENDEDOR.APELLIDOS__VENDEDOR AS APELLIDOS
FROM SUCURSAL INNER JOIN VENDEDOR ON SUCURSAL.ID_SUCURSAL = VENDEDOR.ID_SUCURSAL
WHERE SUCURSAL.ID_SUCURSAL = 3
	GROUP BY 
	  FECHA_INGRESO,
	  NOMBRE, 
	  APELLIDOS
LIMIT 1;

